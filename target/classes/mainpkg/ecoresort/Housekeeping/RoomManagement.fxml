<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpkg.ecoresort.Housekeeping.RoomManagementController">
   <children>
      <Label layoutX="232.0" layoutY="14.0" text="Room Management">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="24.0" layoutY="60.0" text="Select Room" />
      <ComboBox fx:id="roomCB" layoutX="110.0" layoutY="56.0" prefWidth="150.0" />
      <Label layoutX="24.0" layoutY="100.0" text="Status:" />
      <Label fx:id="statusL" layoutX="110.0" layoutY="100.0" text="-" />
      <Label layoutX="280.0" layoutY="60.0" text="Linen Change" />
      <TextField fx:id="linenTF" layoutX="370.0" layoutY="56.0" prefWidth="100.0" promptText="Days" />
      <Button layoutX="24.0" layoutY="140.0" mnemonicParsing="false" onAction="#markCleanOA" text="Mark Clean" />
      <Button layoutX="120.0" layoutY="140.0" mnemonicParsing="false" onAction="#markDNDOA" text="Mark DND" />
      <Button layoutX="220.0" layoutY="140.0" mnemonicParsing="false" onAction="#updateLinenOA" text="Update Linen" />
      <Button layoutX="340.0" layoutY="140.0" mnemonicParsing="false" onAction="#postMaintenanceOA" text="Post Maintenance" />
      <Button layoutX="500.0" layoutY="140.0" mnemonicParsing="false" onAction="#backOA" text="Back" />
      <TableView fx:id="roomTV" layoutX="24.0" layoutY="180.0" prefHeight="200.0" prefWidth="550.0">
        <columns>
          <TableColumn fx:id="roomNumberTC" prefWidth="80.0" text="Room #" />
          <TableColumn fx:id="roomStatusTC" prefWidth="100.0" text="Status" />
          <TableColumn fx:id="assignedToTC" prefWidth="100.0" text="Assigned To" />
          <TableColumn fx:id="lastCleanedTC" prefWidth="120.0" text="Last Cleaned" />
          <TableColumn fx:id="linenChangeTC" prefWidth="140.0" text="Next Linen Change" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
