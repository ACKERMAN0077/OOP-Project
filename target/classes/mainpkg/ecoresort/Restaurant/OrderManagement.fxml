<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpkg.ecoresort.Restaurant.OrderManagementController">
   <children>
      <Label layoutX="220.0" layoutY="14.0" text="Order Management">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="24.0" layoutY="55.0" text="Table #" />
      <TextField fx:id="tableTF" layoutX="80.0" layoutY="51.0" prefWidth="60.0" />
      <Button layoutX="150.0" layoutY="51.0" mnemonicParsing="false" onAction="#newOrderOA" text="New Order" />
      <Label layoutX="250.0" layoutY="55.0" text="Menu Item:" />
      <ComboBox fx:id="menuCB" layoutX="320.0" layoutY="51.0" prefWidth="150.0" />
      <Button layoutX="480.0" layoutY="51.0" mnemonicParsing="false" onAction="#addItemOA" text="Add" />
      <Label layoutX="24.0" layoutY="95.0" text="Order ID:" />
      <Label fx:id="orderIdL" layoutX="80.0" layoutY="95.0" text="-" />
      <Label layoutX="150.0" layoutY="95.0" text="Total:" />
      <Label fx:id="totalL" layoutX="190.0" layoutY="95.0" text="0.00" />
      <Label layoutX="280.0" layoutY="95.0" text="Discount:" />
      <TextField fx:id="discountTF" layoutX="340.0" layoutY="91.0" prefWidth="60.0" />
      <Button layoutX="410.0" layoutY="91.0" mnemonicParsing="false" onAction="#applyDiscountOA" text="Apply" />
      <Button layoutX="24.0" layoutY="130.0" mnemonicParsing="false" onAction="#cashPaymentOA" text="Cash Payment" />
      <Button layoutX="130.0" layoutY="130.0" mnemonicParsing="false" onAction="#cardPaymentOA" text="Card Payment" />
      <Button layoutX="240.0" layoutY="130.0" mnemonicParsing="false" onAction="#roomChargeOA" text="Room Charge" />
      <Label layoutX="350.0" layoutY="134.0" text="Room #" />
      <TextField fx:id="roomTF" layoutX="400.0" layoutY="130.0" prefWidth="60.0" />
      <Button layoutX="470.0" layoutY="130.0" mnemonicParsing="false" onAction="#verifyGuestOA" text="Verify" />
      <Button layoutX="530.0" layoutY="130.0" mnemonicParsing="false" onAction="#voidItemOA" text="Void" />
      <Button layoutX="540.0" layoutY="14.0" mnemonicParsing="false" onAction="#backOA" text="Back" />
      <TableView fx:id="orderTV" layoutX="24.0" layoutY="170.0" prefHeight="100.0" prefWidth="550.0">
        <columns>
          <TableColumn fx:id="orderIdTC" prefWidth="80.0" text="Order ID" />
          <TableColumn fx:id="tableTC" prefWidth="60.0" text="Table" />
          <TableColumn fx:id="statusTC" prefWidth="80.0" text="Status" />
          <TableColumn fx:id="subtotalTC" prefWidth="80.0" text="Subtotal" />
          <TableColumn fx:id="grandTotalTC" prefWidth="80.0" text="Grand Total" />
          <TableColumn fx:id="paymentTC" prefWidth="80.0" text="Payment" />
        </columns>
      </TableView>
      <Label layoutX="24.0" layoutY="280.0" text="Current Order Items:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TableView fx:id="itemsTV" layoutX="24.0" layoutY="300.0" prefHeight="85.0" prefWidth="550.0">
        <columns>
          <TableColumn fx:id="itemNameTC" prefWidth="200.0" text="Item Name" />
          <TableColumn fx:id="priceTC" prefWidth="100.0" text="Price" />
          <TableColumn fx:id="categoryTC" prefWidth="100.0" text="Category" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
