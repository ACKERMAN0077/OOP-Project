<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpkg.ecoresort.Restaurant.MenuStockController">
   <children>
      <Label layoutX="240.0" layoutY="14.0" text="Menu &amp; Stock">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button layoutX="500.0" layoutY="14.0" mnemonicParsing="false" onAction="#backOA" text="Back" />
      <Label layoutX="24.0" layoutY="55.0" text="Menu Items:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TableView fx:id="menuTV" layoutX="24.0" layoutY="75.0" prefHeight="120.0" prefWidth="550.0">
        <columns>
          <TableColumn fx:id="menuNameTC" prefWidth="200.0" text="Name" />
          <TableColumn fx:id="menuPriceTC" prefWidth="100.0" text="Price" />
          <TableColumn fx:id="menuCategoryTC" prefWidth="150.0" text="Category" />
        </columns>
      </TableView>
      <Label layoutX="24.0" layoutY="205.0" text="Food Stock:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TableView fx:id="stockTV" layoutX="24.0" layoutY="225.0" prefHeight="100.0" prefWidth="550.0">
        <columns>
          <TableColumn fx:id="stockNameTC" prefWidth="150.0" text="Item Name" />
          <TableColumn fx:id="stockQtyTC" prefWidth="100.0" text="Quantity" />
          <TableColumn fx:id="stockReorderTC" prefWidth="100.0" text="Reorder Level" />
          <TableColumn fx:id="stockCategoryTC" prefWidth="100.0" text="Category" />
        </columns>
      </TableView>
      <Button layoutX="24.0" layoutY="340.0" mnemonicParsing="false" onAction="#generateReportOA" text="Generate Sales Report" />
      <TextArea fx:id="reportTA" layoutX="200.0" layoutY="340.0" prefHeight="50.0" prefWidth="374.0" />
   </children>
</AnchorPane>
